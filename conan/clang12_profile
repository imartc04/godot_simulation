[settings]
arch=x86_64
build_type=Release
compiler=clang
compiler.cppstd=17
compiler.libcxx=libc++
compiler.version=12
os=Linux

[buildenv]
CC=/usr/bin/clang-12
CXX=/usr/bin/clang++-12
LD=/usr/bin/ld.lld-10
LINK=/usr/bin/ld.lld-10
tools.build:compiler_executables=={'c': '/usr/bin/clang-12', 'cpp': '/usr/bin/clang++-12'}
tools.build:cflags=["-std=c++17"]
tools.build:cxxflags=["-std=c++17", "-lc++"]